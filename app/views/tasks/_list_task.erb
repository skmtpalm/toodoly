<div class="task">
  <!--  Task Navigator -->
  <%= render partial: 'navigator', locals: { task: task } %>

  <div class="level task__header">
    <div class="level-left">
      <div class="level-item">
        <p class="task__title"><%= task.title %></p>

        <% if task.description.present? %>
          <div class="task-text-toggle-nav" data-target-task-id="<%= task.id %>">
            <span class="icon has-text-grey-lighter"><i class="fa fa-file-text-o" aria-hidden="true"></i></span>
          </div>
        <% end %>

      </div>
    </div>
    <div class="level-right task__header__right">
      <% if task.due.present? %>
        <time class="level-item task__due"><%= task.due.strftime("%m月%d日") %></time>
      <% end %>
    </div>
  </div>

  <% if task.description.present? %>
    <div class="task__body" id="task-text-<%= task.id %>">
      <p class="task__body__text"><%= task.description %></p>

      <div class="field is-grouped">
        <p class="control">
          <%= link_to 'Edit', edit_task_path(task), class: 'button is-small is-outlined is-primary' %>
        </p>
        <p class="control">
          <%= link_to 'Delete', task_path(task), method: :delete,  class: 'button is-small is-outlined is-danger' %>
        </p>
      </div>
    </div>
  <% end %>
</div>
