<div class="field">
  <%= form.label :title, class: 'label' %>
  <div class="control">
    <%= form.text_field :title, class: 'input' %>
  </div>
</div>
<div class="field">
  <%= form.label :description, class: 'label' %>
  <div class="control">
    <%= form.text_field :description, class: 'input' %>
  </div>
</div>
<div class="field">
  <%= form.label :due, class: 'label' %>
  <div class="control">
    <%= form.text_field :due, class: 'input', data: { toggle: :datepicker } %>
  </div>
</div>
<div class="field">
  <div class="control">
    <button type="submit" class="button is-primary">
      <%= edit ? 'Update Task' : 'Create New Task' %>
    </button>
  </div>
</div>
